<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<h2 class="text-center">Log in</h2>

  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "E-mail", input_html:{class: "form-control"} %>
    <%= f.input :password, required: false, label: false, placeholder: "Password", input_html:{class: "form-control"} %>
    <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
<% end %>


<%= render "devise/shared/links" %>
